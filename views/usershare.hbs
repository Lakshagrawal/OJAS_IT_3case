<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Share Post By user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Hover effect */
        .nav-link:hover {
            color: #020202;
            /* White text color on hover */
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            border-radius: 1rem;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fs-5 navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Ojas Tech</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-start" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                       <a href="/" class="nav-link text-center">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/login" class="nav-link text-center">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="my-5 text-center ">All Posts</h1>
    </div>

    <div class="container my-4">
        {{#if items}}
        <div class="row">
            {{#each items}}
            <div class="col-md-4 mx-auto">
                <div class="card mb-4">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.itemname}}">
                    <div class="container text-center">
                        <div class="card-body">
                            <h5 class="card-title">{{this.itemname}}</h5>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        {{else}}
        <h2 class="text-center text-warning">No Items Posted</h2>
        {{/if}}

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include this script at the end of your HTML body or in a separate JavaScript file -->


</body>

</html>