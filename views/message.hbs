<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Post Your Images | Message</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fs-5 navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Ojas Tech</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-start" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                       <a href="/" class="nav-link text-center">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link text-center">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
  <div class="container mt-5">  
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title text-center">Add Message</h1>
          </div>
          <div class="card-body">
            <form action="/addmessage" method="post" enctype="multipart/form-data" id="addItemForm">
              <div class="mb-3">
                <label for="img" class="form-label">Image</label>
                <input type="file" class="form-control" id="img" name="img" accept="image/*">
              </div>
              <div class="mb-3">
                <label for="itemname" class="form-label">Description</label>
                <input type="text" class="form-control" id="itemname" name="desc" required>
              </div>
              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Add Message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script>
    document.getElementById("addItemForm").addEventListener("submit", function (event) {
      var fileInput = document.getElementById('img');
      var filePath = fileInput.value;
      var allowedExtensions = /(\.png|\.jpg|\.jpeg|\.gif)$/i;

      if (!allowedExtensions.exec(filePath)) {
        alert('Please upload file having extensions .png, .jpg, .jpeg, or .gif only.');
        event.preventDefault();
        return false;
      }
      
    });
  </script>
</body>

</html>
